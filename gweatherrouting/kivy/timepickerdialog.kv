#:kivy 1.0

<TimePickerDialogContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDBoxLayout:
        orientation: "horizontal"

        MDLabel:
            id: dateLabel
            text: root.datetime.strftime("%m/%d/%Y")

        MDRaisedButton:
            text: "Set date"
            on_press: root.openDatePicker()

    MDBoxLayout:
        orientation: "horizontal"

        MDLabel:
            id: timeLabel
            text: root.datetime.strftime("%H:%M:%S")

        MDRaisedButton:
            text: "Set time"
            on_press: root.openTimePicker()